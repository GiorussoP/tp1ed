{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "g++",
			"args": [
				"-g",
				"-std=c++17",
				"-O3",
				"-I${workspaceFolder}/include",
				"${workspaceFolder}/src/**.cpp",
				"-o",
				"${workspaceFolder}/exec.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:/C:/path/to/g++.exe"
		}
	]
}